<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F5E8">

    <!-- Toolbar hijau (kompatibel dengan kode yang mereferensikan 'toolbar') -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4CAF50"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Relocation"
        app:titleTextColor="@color/white" />

    <!-- Status Card - Tetap di atas dan terlihat -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detected"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRfidDetected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#2E7D32"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRfidValid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#4CAF50"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invalid"
                        android:textColor="#F44336"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRfidNa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#F44336"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Konten scrollable menggunakan NestedScrollView (Toolbar & Status Card tetap statis) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Current Location Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Location"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <AutoCompleteTextView
                        android:id="@+id/actvCurrentLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select current warehouse"
                        android:padding="8dp"
                        android:background="@drawable/textbox_green_border"
                        android:layout_marginTop="8dp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:inputType="none" />

                    <RadioGroup
                        android:id="@+id/rgTagStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/rbTagged"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tagged"
                            android:textColor="#2E7D32" />

                        <Space
                            android:layout_width="24dp"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/rbMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Master"
                            android:textColor="#2E7D32" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Target Location Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Location"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <AutoCompleteTextView
                        android:id="@+id/actvTargetLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select target warehouse"
                        android:padding="8dp"
                        android:background="@drawable/textbox_green_border"
                        android:layout_marginTop="8dp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:inputType="none" />

                    <RadioGroup
                        android:id="@+id/rgTargetTagStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/rbTargetTagged"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tagged"
                            android:textColor="#2E7D32" />

                        <Space
                            android:layout_width="24dp"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/rbTargetMaster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Master"
                            android:textColor="#2E7D32" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tombol aksi: Scan, Submit (bulat modern), Clear (ikon merah) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnScan"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Scan"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_green_round"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_green_round"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnClear"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_delete_modern"
                    android:tint="#F44336"
                    android:contentDescription="Clear" />
            </LinearLayout>

            <!-- List box (RecyclerView) hijau - scroll mandiri (tinggi tetap) di dalam NestedScrollView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRelocationItems"
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:padding="8dp"
                android:background="@drawable/recyclerview_green_border"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
                android:scrollbarTrackVertical="@drawable/scrollbar_track"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarSize="8dp"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
