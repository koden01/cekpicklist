<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Card utama -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:elevation="0dp">

        <!-- Article Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:minHeight="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvArticleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Article Name"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center" />

            <!-- NA Info untuk item dengan nilai NA -->
            <TextView
                android:id="@+id/tvNAInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="9sp"
                android:textColor="#8BC34A"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:gravity="center" />

        </LinearLayout>

        <!-- Size -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

        </LinearLayout>

        <!-- Qty Planned -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQtyPl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

        </LinearLayout>

        <!-- Qty Scan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQtyScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_qty_red"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:minHeight="28dp"
                android:padding="4dp" />

        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Background untuk area delete (25% dari lebar total) -->
    <LinearLayout
        android:id="@+id/deleteBackground"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FF4444"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone">

        <!-- Icon sampah sederhana -->
        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>
