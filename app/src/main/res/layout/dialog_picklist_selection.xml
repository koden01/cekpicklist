<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dialog_margin"
    android:maxHeight="@dimen/picklist_dialog_max_height"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_list_modern"
                android:layout_marginEnd="16dp"
                android:tint="#4CAF50" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih Nomor Picklist"
                android:textSize="@dimen/dialog_title_size"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvPicklistCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 item"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/bg_picklist_count"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Search Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_search_box"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_modern"
                android:layout_marginEnd="16dp"
                android:tint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etSearchPicklist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cari nomor picklist..."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/btnClearSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close_modern"
                android:layout_marginStart="8dp"
                android:tint="@android:color/darker_gray"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <!-- RecyclerView untuk list picklist -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPicklistList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/picklist_recycler_height"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"
            android:overScrollMode="never" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/llEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_search_modern"
                android:alpha="0.3"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvEmptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada picklist tersedia"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
